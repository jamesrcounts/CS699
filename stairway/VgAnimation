    <title>Bendy platform animation with EaselJS</title>
    <!-- Easel -->
    <script type="text/javascript" src="lib/EaselJS/easeljs-0.6.0.min.js"></script>
    <script>
        var canvas;
        var stage;

        function Size(w, h) {
            return {
                width: w,
                height: h
            };
        }

        function Position(X, Y) {
            return {
                x: X,
                y: Y
            };
        }

        var platformSize = new Size(70, 10);
        var canvasSize = new Size(100, 100);
        var maxBend = 20;

        function init() {
            canvas = getElementById("testCanvas");
            stage = new createjs.Stage(canvas);
            var bg = new createjs.Shape();
            stage.addChild(bg);


        }
    </script>
